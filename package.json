{
  "name": "secure-firebase-express-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Production-ready Express backend with Firebase Admin, security best practices, logging, validation, and tests.",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch src --ext js --exec \"node --enable-source-maps src/server.js\"",
    "start": "NODE_ENV=production node --enable-source-maps src/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "vitest": "^2.0.5"
  }
}
